<html>
    <head>
        <meta charset="UTF-8">
        <script src="https://kit.fontawesome.com/1e045a3d0b.js" crossorigin="anonymous"></script>

        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
    </head>
    <body>
    <div class="page-bar">
        <nav class="navbar ">
            <a class="navbar-brand" href="{{ path('app_homepage') }}">
                <p class="navbar-text">home</p>
            </a>
        </nav>
        <div class="spacer"></div>
        <nav class="navbar links">
            <a class="navbar-link" href="{{ path('app_traditional') }}">
                <p class="navbar-text link">traditional</p>
            </a>
            <a class="navbar-link" href="{{ path('app_digital') }}">
                <p class="navbar-text link">digital</p>
            </a>
            <a class="navbar-link" href="{{ path('app_sketches') }}">
                <p class="navbar-text link">sketches</p>
            </a>
            <a class="navbar-link" href="{{ path('app_about_me') }}">
