{% extends 'base.html.twig' %}
{% block title %} Portfolio {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/slider.css') }}">
{% endblock %}
{% block body %}
    <div class="slider">
        <div class="js-slide-arrows">
            <button class="slider-btn btnLeft" data-change="left"><i class="fas fa-angle-double-left"></i></button>
            <button class="slider-btn btnRight" data-change="right"><i class="fas fa-angle-double-right"></i></button>
        </div>
        <div class="slider-content">
            <img class="shown-image" src="{{ asset('images/dorothy.png') }}" alt="{{ asset('images/oops.jpg') }}" >
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/slides.js') }}"></script>
{% endblock %}
